@require "_view.styl"
@require "_bar-chart.styl"

.jenkins
  &__plato-complexity_average_chart
  &__job-builds_histogram
    .result--unknown
      fill $unknown-color
    .result--aborted
      fill $unknown-color
    .result--success
      fill $success-color
    .result--failure
      fill $failure-color

  &__job
    position relative
    padding 7px 15px 7px 35px

    &:before
      content " "
      display block
      width  12px
      height 12px
      position absolute
      top  14px
      left 12px
      border-radius 100%
      background-color #000

    &__status
      position absolute
      left 15px

    &__number
      color darken($main-txt-color, 20)
      margin-right 7px

    &--success
      &:before
        background-color $success-color

    &--failure
      &:before
        background-color $failure-color

    time
      font-size 12px
      display inline-block
      color darken($main-txt-color, 20)

  &__job-status
    .widget__body
    padding-bottom 30px

    &__current
      margin 40px 0 0 50px
      &__status
        font-size 28px
        line-height 32px
        &--success
          color $success-color

        &--warning
          color $warning-color

        &--failure
          color $failure-color

      &__time
        font-size 13px
        color darken($main-txt-color, 20)

    &__previous
      position absolute
      left   0
      bottom 10px
      height      24px
      line-height 24px
      padding 0 15px
      font-size 13px
      color darken($main-txt-color, 20)

  &__plato-status
    margin-top 10px
    text-align center
    font-size 24px
    display block
    width 100%

    &__title
      margin-top 40px

    &__report
      font-size 18px

      &--green
        color $success-color

      &--yellow
        color $warning-color

      &--red
        color $failure-color

    &__average-value
      font-size 40px
      margin-top 20px

      &--green
        color $success-color

      &--yellow
        color $warning-color

      &--red
        color $failure-color

  &__plato-table

    &__row
      display block
      position relative
      width 100%
      height 18%
      vertical-align middle
      text-align center
      font-family Helvetica
    
    &__timestamp
      width 75%
      height 100%
      float left
      display flex
      align-items center
      justify-content center
      
    &__value
      width 25%
      height 100%
      font-size 2.4vmin
      color $success-color
      float right
      display flex
      align-items center
      justify-content flex-start

    &__header
      height 10%
      border-bottom 1px solid
      text-transform uppercase

      &__timestamp
        width 75%
        height 100%
        float left
        display flex
        align-items center
        justify-content center
      
      &__value
        width 25%
        height 100%
        float right
        display flex
        align-items center
        justify-content flex-start

    &__icon
      position relative
      transform translateX(50%)

      &-worsen
        color $failure-color
      
      &__icon-better
        color $success-color

  &__coverage-status
    margin-top 10px
    text-align center
    font-size 24px
    display block
    width 100%

    &__title
      margin-top 40px

    &__average-value
      font-size 40px
      margin-top 20px

      &--green
        color $success-color

      &--yellow
        color $warning-color

      &--red
        color $failure-color

.bar-chart_wrapper 
  overflow hidden

.widget
  &__body
    &__colored
      display flex
      width 100%
      height 100%
      text-align center
      & .jenkins
        &__job-status
          &__current
            margin auto
